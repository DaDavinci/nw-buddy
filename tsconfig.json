{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "types": [
      "@types/node",
      "@overwolf/types",
      "node",
      "react"
    ],
    "rootDirs": [
      "src",
      "src/background/**",
      "src/components/**",
      "src/windows/**",
      "public/**/*",
      "src/*/**",
    ],
    "target": "ESNext",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      // import a emcascriptmodule syntax
      {
        "name": "@babel/plugin-transform-modules-commonjs",
        "options": {
          "allowTopLevelThis": true,
          "allowReturnOutsideFunction": true,
          "allowDynamicImport": true,
          "allowImportExportEverywhere": true,
          "allowAwaitOutsideFunction": true,
          "only": [
            "src/**/*",
            "src/*/**",
            "src/background/**",
            "src/components/**",
            "src/windows/**",
            "public/**/*",
            "src/*/**",
          ]
        },
      },
    ],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true,
  },
  "exclude": [
    "node_modules",
    "api",
    "debug.server.js",
    "public",
    ".vercel",
    ".vscode",
    "releases",
    "dist",
    "build"
  ]
}
