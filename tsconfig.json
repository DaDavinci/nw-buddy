{
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "types": [
      "@types/node",
      "@types/p5",
      "@overwolf/types",
      "node",
      "react",
    ],
    "rootDirs": [
      "src",
      "src/**/*",
      "public",
      "public/**/*",
    ],
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "@babel/plugin-transform-modules-commonjs",
        "options": {
          "noImplicitAny": true,
          "allowTopLevelThis": true,
          "allowReturnOutsideFunction": true,
          "allowDynamicImport": true,
          "allowImportExportEverywhere": true,
          "allowAwaitOutsideFunction": true,
          "only": [
            "src",
            "src/**/*",
            "public",
            "public/**/*",
          ]
        },
      },
    ],
    "jsx": "react",
    "sourceMap": true,
    "removeComments": true,
    "allowJs": true
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "api",
    "debug.server.js",
    "public",
    ".vercel",
    ".vscode",
    "releases",
    "dist",
    "build",
    "./package.json",
    "./package-lock.json",
    "tsconfig.json",
    "jsconfig.json",
    "public/manifest.json",
  ]
}
