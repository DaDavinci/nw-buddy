{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "New World Buddy",
    "author": "DaveInchy",
    "version": "22.04.25",
    "minimum-overwolf-version": "0.180.0",
    "description": "An AGS TOS Compliant lightweight Overwolf overlay",
    "dock_button_title": "NW Buddy",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "icon_hover": "icons/IconMouseOver.png",
    "launcher_icon": "icons/favicon.ico",
    "window_icon": "icons/WindowIcon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "GameControl",
    "Web",
    "Logging",
    "Extensions",
    "Profile",
    "Clipboard",
    "Media",
    "FileSystem",
    "Tray"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "minimap": {
        "title": "Show Minimap",
        "action-type": "toggle",
        "default": "Alt+M"
      },
      "zoomIn": {
        "title": "Zoom in",
        "action-type": "custom",
        "default": "Alt+I"
      },
      "zoomOut": {
        "title": "Zoom out",
        "action-type": "custom",
        "default": "Alt+O"
      },
      "create": {
        "title": "Create Pin",
        "action-type": "toggle",
        "default": "Ctrl+P"
      },
      "groups": {
        "title": "Show/Hide Groups",
        "action-type": "toggle",
        "default": "Ctrl+A"
      },
      "editor": {
        "title": "Show/Hide Editor",
        "action-type": "toggle",
        "default": "Ctrl+E"
      },
      "routes": {
        "title": "Show/Hide Routes",
        "action-type": "toggle",
        "default": "Alt+C"
      }
    },
    "protocol_override_domains": {
      "localhost": "http",
      "vercel.app": "https"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "http://localhost:*",
        "http://*.vercel.app"
      ]
    },
    "force_browser": "user",
    "extra-objects": {},
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "overlay": {
        "file": "overlay.html",
        "in_game_only": true,
        "focus_game_takeover": "ShowOnFocus",
        "allow_local_file_access": true,
        "keep_window_location": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": false,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "min_size": {
          "width": 1280,
          "height": 720
        },
        "max_size": {
          "width": 2560,
          "height": 1440
        },
        "size": {
          "width": 1280,
          "height": 720
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21816]
    },
    "game_events": [21816],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [21816]
        },
        "start_minimized": false
      }
    ],
    "launch_event": [
      {
        "event": "GameLaunch",
        "game_ids": [
          21816
        ],
        "start_minimized": false
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
