{
  "manifest_version": 1,
  "type": "WebApp",
  "$schema": "manifest-schema.json",
  "meta": {
    "name": "New World Buddy",
    "author": "DaveInchy",
    "version": "0.22.7",
    "minimum-overwolf-version": "0.190.0",
    "description": "An AGS TOS Compliant lightweight Overwolf overlay",
    "dock_button_title": "NW Buddy",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "icon_hover": "icons/IconMouseOver.png",
    "launcher_icon": "icons/favicon.ico",
    "window_icon": "icons/WindowIcon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "GameControl",
    "Web",
    "Logging",
    "Extensions",
    "Profile",
    "Clipboard",
    "Media",
    "FileSystem",
    "Tray"
  ],
  "data": {
    "hotkeys": {
      "minimap": {
        "title": "Show Minimap",
        "action-type": "toggle",
        "default": "Alt+M"
      },
      "zoomIn": {
        "title": "Zoom in",
        "action-type": "custom",
        "default": "Alt+I"
      },
      "zoomOut": {
        "title": "Zoom out",
        "action-type": "custom",
        "default": "Alt+O"
      },
      "create": {
        "title": "Create Marker",
        "action-type": "toggle",
        "default": "Ctrl+P"
      },
      "worldmap": {
        "title": "Show Worldmap",
        "action-type": "toggle",
        "default": "Ctrl+M"
      },
      "editor": {
        "title": "Show Map Editor",
        "action-type": "toggle",
        "default": "Ctrl+E"
      },
      "routes": {
        "title": "Show/Hide Routes",
        "action-type": "toggle",
        "default": "Ctrl+R"
      }
    },
    "protocol_override_domains": {
      "localhost": "http",
      "vercel.app": "https",
      "doonline.nl": "https"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "http://localhost:*",
        "http://*.vercel.app",
        "http://*doonline.nl",
        "https://*.amazonaws.com"
      ]
    },
    "force_browser": "user",
    "extra-objects": {},
    "start_window": "service",
    "windows": {
      "service": {
        "file": "service.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "welcome": {
        "file": "welcome.html",
        "in_game_only": true,
        "focus_game_takeover": "ShowOnFocus",
        "use_os_windowing": true,
        "native_window": true,
        "allow_local_file_access": true,
        "keep_window_location": true,
        "disable_rightclick": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": false,
        "resizable": true,
        "transparent": true,
        "override_on_update": false,
        "size": {
          "width": 1280,
          "height": 840
        }
      },
      "minimap": {
        "file": "minimap.html",
        "in_game_only": true,
        "focus_game_takeover": "ShowOnFocus",
        "allow_local_file_access": true,
        "keep_window_location": true,
        "disable_rightclick": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": false,
        "resizable": true,
        "transparent": true,
        "override_on_update": false,
        "size": {
          "width": 1280,
          "height": 840
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21816]
    },
    "game_events": [21816],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [21816]
        },
        "start_minimized": false
      }
    ],
    "launch_event": [
      {
        "event": "GameLaunch",
        "game_ids": [
          21816
        ],
        "start_minimized": false
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
