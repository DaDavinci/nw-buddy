{
  "$schema": "https://raw.githubusercontent.com/overwolf/community-gists/master/overwolf-manifest-schema.json",
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "[BSC] New World Buddy",
    "author": "Dave Inchy",
    "version": "22.03.07",
    "minimum-overwolf-version": "0.180.0",
    "description": "A New World Tool for The Black Sail Corporation",
    "dock_button_title": "NW Buddy",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "launcher_icon": "icons/desktop-icon.ico",
    "window_icon": "icons/IconMouseOver.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "GameControl",
    "VideoCaptureSettings",
    "Web",
    "Camera",
    "Microphone",
    "Logging",
    "Extensions",
    "Streaming",
    "DesktopStreaming",
    "Profile",
    "Clipboard",
    "Media",
    "FileSystem",
    "Tray",
    "shutdown"
  ],
  "data": {
    "start_window": "background",
    "hotkeys": {
      "showhide": {
        "title": "Show/Hide",
        "action-type": "toggle",
        "default": "Alt+W"
      }
    },
    "protocol_override_domains": {
      "localhost": "http"
    },
    "externally_connectable": {
      "matches": [
        "http://*.overwolf.com",
        "https://*.overwolf.com",
        "http://localhost:8420",
        "http://localhost:8421"
      ]
    },
    "force_browser": "user",
    "extra-objects": {
      "dbghelp.dll": {
        "file": "bin/dbghelp.dll",
        "class": "overwolf.plugins.debugger"
      }
    },
    "windows": {
      "background": {
        "file": "background.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "overlay": {
        "file": "overlay.html",
        "in_game_only": true,
        "focus_game_takeover": "HideOnLostFocus",
        "allow_local_file_access": true,
        "keep_window_location": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": true,
        "resizable": false,
        "transparent": true,
        "override_on_update": false,
        "min_size": {
          "width": 1280,
          "height": 720
        },
        "size": {
          "width": 1920,
          "height": 1080
        }
      },
      "console": {
        "file": "console.html",
        "desktop_only": true,
        "native_window": true,
        "use_os_windowing": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 1600,
          "height": 900
        },
        "min_size": {
          "width": 1280,
          "height": 720
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21816]
    },
    "game_events": [21816],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [21816]
        },
        "start_minimized": false
      }
    ],
    "launch_event": [
      {
        "event": "GameLaunch",
        "game_ids": [
          21816
        ],
        "start_minimized": false,
        "wait_for_stable_framerate": 30
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
