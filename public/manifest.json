{
  "manifest_version": 1,
  "type": "WebApp",
  "$schema": "manifest-schema.json",
  "meta": {
    "name": "New World Buddy",
    "author": "DaveInchy",
    "version": "23.3.13",
    "minimum-overwolf-version": "0.190.0",
    "description": "An AGS TOS Compliant lightweight Overwolf overlay",
    "dock_button_title": "NW Buddy",
    "icon": "icons/IconMouseOver.png",
    "icon_gray": "icons/IconMouseNormal.png",
    "icon_hover": "icons/IconMouseOver.png",
    "launcher_icon": "icons/favicon.ico",
    "window_icon": "icons/WindowIcon.png"
  },
  "permissions": [
    "Hotkeys",
    "GameInfo",
    "GameControl",
    "Web",
    "Logging",
    "Extensions",
    "Profile",
    "Clipboard",
    "Media",
    "FileSystem",
    "Tray"
  ],
  "data": {
    "hotkeys": {
      "minimap": {
        "title": "Show (minimap)",
        "action-type": "custom",
        "default": "Alt+O"
      },
      "minimap_hide": {
        "hold": true,
        "title": "Hide (minimap)",
        "action-type": "custom",
        "default": "Alt+P"
      },
      "restart": {
        "hold": false,
        "action-type": "custom",
        "passthrough": false,
        "title": "Fix (overlay)",
        "default": "Shift+Esc"
      }
    },
    "protocol_override_domains": {
      "localhost": "http",
      "doonline.nl": "https",
      "vercel.app": "http",
      "overwolf.com": "https",
      "amazonaws.com": "https"
    },
    "externally_connectable": {
      "matches": [
        "http://localhost:*",
        "http://doonline.nl:*",
        "http://*.vercel.app",
        "http://*.overwolf.com",
        "http://*.amazonaws.com"
      ]
    },
    "force_browser": "user",
    "extra-objects": {},
    "start_window": "service",
    "windows": {
      "service": {
        "file": "service.html",
        "background_optimization": true,
        "is_background_page": true
      },
      "welcome": {
        "file": "welcome.html",
        "in_game_only": true,
        "focus_game_takeover": "HideOnShow",
        "use_os_windowing": true,
        "native_window": true,
        "allow_local_file_access": true,
        "keep_window_location": true,
        "disable_rightclick": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 16,
          "height": 16
        }
      },
      "overlay": {
        "file": "overlay.html",
        "in_game_only": true,
        "focus_game_takeover": "ShowOnFocus",
        "allow_local_file_access": true,
        "keep_window_location": true,
        "disable_rightclick": true,
        "optimize_accelerate_rendering": true,
        "ignore_keyboard_events": false,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 16,
          "height": 16
        }
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [
        21816
      ]
    },
    "game_events": [
      21816
    ],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [
            21816
          ]
        },
        "start_minimized": false
      }
    ],
    "launch_event": [
      {
        "event": "GameLaunch",
        "game_ids": [
          21816
        ],
        "start_minimized": false
      }
    ],
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}