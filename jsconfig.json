{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": false,
        "strictNullChecks": false,
        "experimentalDecorators": true,
        "types": [
            "@types/node",
            "@types/p5",
            "@overwolf/types",
            "node",
            "react",
        ],
        "target": "ES2017",
        "module": "CommonJS",
        "moduleResolution": "node",
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ],
    "include": [
        "src",
        "src/**/*",
        "public",
        "public/**/*",
    ]
}